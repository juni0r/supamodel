{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],

    "baseUrl": ".",
    "paths": {
      "@/src": ["src"],
      "@/src/*": ["src/*"],
      "@/test": ["test"],
      "@/test/*": ["test/*"],
    },

    /* Linting */
    "strict": true,
    "skipLibCheck": true,    
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": ["src"]
}
